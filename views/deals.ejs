<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Ration Deal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/deals.css">
</head>

<body>

        <div class="container mt-4">
            <a href="/" class="btn btn-outline-light mb-3">
                ‚Üê Back to Users
            </a>
        </div>

        <div class="container my-5">

            <h2 class="text-center title mb-4">Ration Deal</h2>

            <!-- MEMBER DETAILS -->
            <div class="card p-4 mb-4 bg-light">
                <div class="row text-center">
                    <div class="col-md-3">
                        <strong>Name</strong><br>
                        <%= ration.name %>
                    </div>
                    <div class="col-md-3">
                        <strong>Ration No</strong><br>
                        <%= ration.rationNo %>
                    </div>
                    <div class="col-md-3">
                        <strong>House</strong><br>
                        <%= ration.houseName %>
                    </div>
                    <div class="col-md-3">
                        <strong>Category</strong><br>
                        <span class="<%= ration.category === 'BPL' ? 'bpl' : 'apl' %>">
                            <%= ration.category %>
                        </span>
                    </div>
                </div>
            </div>

            <!-- GOODS SECTION -->
            <div class="card p-4 bg-light">
                <h5 class="mb-3">Monthly Goods</h5>

                <% if (ration.category==='BPL' ) { %>
                    <ul class="list-group">
                        <li class="list-group-item">Rice - 18 Kg</li>
                        <li class="list-group-item">Wheat - 5 Kg</li>
                        <li class="list-group-item">Sugar - 4 Kg</li>
                        <li class="list-group-item">Kerosene - 2 Lr</li>
                        <li class="list-group-item">Pulses - 1 Kg</li>
                    </ul>
                    <% } else { %>
                        <ul class="list-group">
                            <li class="list-group-item">Rice - 11 kg</li>
                            <li class="list-group-item">Wheat - 2 kg</li>
                            <li class="list-group-item">Sugar 2 kg</li>
                            <li class="list-group-item">Kerosene - 1 Lr</li>
                        </ul>
                        <% } %>

                            <form action="/purchase/<%= ration.rationNo %>" method="GET">
                                <button class="btn btn-success mt-4 w-100">
                                    Confirm Deal
                                </button>
                            </form>

            </div>

        </div>

</body>

</html>